<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="javafx.wcp.wcp1.CustomerHome"
      alignment="CENTER"
      spacing="10">

    <!-- Add an ImageView for the logo -->
    <ImageView>
        <!-- Set the path to your image file -->
        <image>
            <Image url="user.png" />
        </image>
        <!-- Set the preferred width and height of the image -->
        <fitWidth>90</fitWidth>
        <fitHeight>90</fitHeight>
    </ImageView>

    <Label text="Web Complaint Portal" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-font-family: 'Montserrat';"/>
    <Button text="Create Complaint" onAction="#handleCreateComplaint" maxWidth="150"/>
    <Button text="Check Status" onAction="#handleCheckStatus" maxWidth="150"/>
    <Button text="Cancel Complaint" onAction="#handleCancelComplaint" maxWidth="150"/>

    <!-- Invisible Region to adjust position -->
    <Region prefHeight="60" />

    <HBox alignment="BOTTOM_LEFT" spacing="10">
        <Button text="Back" onAction="#handleBackButton">
            <HBox.margin>
                <Insets left="25" />
            </HBox.margin>
        </Button>
    </HBox>

    <VBox.margin>
        <Insets top="80" />
    </VBox.margin>

</VBox>




